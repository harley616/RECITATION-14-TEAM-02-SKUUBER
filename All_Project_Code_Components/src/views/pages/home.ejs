  <div class="d-flex flex-column container side-bar" style="padding:0px; align-items: center;">
    <div class="mt-3 friend-icons" style="justify-content: center; align-items: center;">           
        <a>
            <img src="skiing.png" 
                class="img-thumbnail"
                height="70px"
                width="70px"
                alt="Scuuber" />
        </a>
        
    </div>
    <div class="d-flex friend-box" style="font-weight: bold; background-color: #1784b7;"> 
        Friend List      
    </div>
    <% if (friend_list.length > 0) { %>
        <% for (var i = 0; i < friend_list.length; i++) { %>
            <div class="d-flex friend-box" style="">  
                <%= friend_list[i]['friend_username'] %>        
                <form action="removeFriend" method="GET" style="float: right; padding-left: 50px">
                    <input type="hidden" name="username" value="<%= friend_list[i].friend_username %>" /> 
                    <button type="submit" class="btn btn-outline-info scuuber-btn">
                        <i class="fa fa-x"></i>
                    </button>
                </form>
            </div>
        <% } %>
    <% } %>
  </div>  
  <div class="d-flex flex-row container main-friends" style="padding-top: 30px;">
    <div class="d-flex flex-column add-friends-outer" style="">
        <h1 class="scuuber-title">Add Friends</h1>
        <form action="\addFriendRequest" method="POST" name="FriendSendRequest" style="margin-top: 15px; width:90%; justify-content:center;">
            <label class="scuuber-text" for="friend_username">Add a friend by entering their username</label>
            <div class="d-flex row add-friends-input">
                <div class="form col-md my-1" style="flex: 7;">
                    <input class="form-control friend-search" type="text" id="friend_username" name="friend_username" style="" />
                </div>
                <div class="col my-1" style="flex: 1;">
                    <input id="submitbutton" type="submit" value="Invite friend" class="btn btn-primary" style="border-radius: 5px; font-size: 15px; font-family: 'IBM Plex Mono', monospace;" />
                </div>
            </div>
        </form>
    </div>
    <div class="d-flex flex-column" style="width: 100%; align-items: center; ">
        <p class="scuuber-title">Your friend requests</p>
        <% if (friend_request_list.length == 0) { %>
            <p class="scuuber-text">You have no friend requests</p>
        <% } %>
        <% if (friend_request_list.length > 0) { %>
            <p class="scuuber-text"> You have <%= friend_request_list.length %> friend requests</p>
            <% for (var i = 0; i < friend_request_list.length; i++) {%>
                <div class="d-flex flex-column friend-request" style="">
                    <div class="d-flex">
                        <div class="d-flex me-auto mx-2" style="align-items: center; font-family: 'IBM Plex Mono', monospace;">
                            <%= friend_request_list[i]['username'] %>
                        </div>
                        <div class="d-flex my-1" style="margin-right:10px;">
                            <form action="acceptFriend" method="GET">
                                <input type="hidden" name="username" value="<%= friend_request_list[i].username %>" /> 
                                <button type="submit" class="btn btn-outline-info scuuber-btn">
                                    <i class="fa fa-check"></i>
                                </button>
                            </form>
                        </div>
                        <div class="d-flex my-1" style="margin-right:10px;">
                            <form action="declineFriend" method="GET">
                                <input type="hidden" name="username" value="<%= friend_request_list[i].username %>" /> 
                                <button type="submit" class="btn btn-outline-info scuuber-btn">
                                    <i class="fa-solid fa-x"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } %>
    </div>
        
    </div>
  </div>

  <script>
    // Little JS script to prevent the user from trying add a friend with a blank username
    let input = document.getElementById("friend_username");
    let output = document.getElementById("submitbutton");

    output.disabled = true;
    input.addEventListener("change", stateHandle);

    function stateHandle() {
        if(document.getElementById("friend_username").value === ""){
            output.disabled = true;
        } else {
            output.disabled = false;
        }
    }
</script>

</main>

