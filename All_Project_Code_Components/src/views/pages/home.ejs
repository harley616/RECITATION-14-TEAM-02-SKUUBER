<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main class="d-flex flex-row">
    <style>
        .scuuber-menu {
            color: black; font-size: 19px;font-family: 'IBM Plex Mono', monospace;text-decoration: underline;
        }
        .scuuber-title {
            color: black; 
            font-family: 'IBM Plex Mono', monospace; 
            font-weight: semibold;
        }
        .scuuber-text {
            color: black; font-size: 15px;font-family: 'IBM Plex Mono', monospace; text-decoration: none;
        }
        .scuuber-btn {
            color: black; 
            font-size: 15px;
            font-family: 'IBM Plex Mono', monospace;

        }
        .side-bar {
            flex: 0.25;
            height:100vh;
            background-color: #adadad;
            padding:0px;
            align-items: center;
            box-shadow: 5 0 20px rgba(0, 0, 0, 10);
        }
        .main-friends {
            flex: 11;
            justify-content: center;
            background-color: #efefef;
        }
        .friend-icons {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            border-radius: 10px;
            background-color: #adadad;
            padding-bottom: 10px;
        }
        .friend-icons:hover {
            border-radius: 30px;
        }
        .friend-box {
            margin-top: 10px; 
            width:80%; 
            justify-content: center; 
            align-items: center; 
            border-radius: 7px;
            align-items: center;
            color: black; 
            font-size: 15px;
            font-family: 'IBM Plex Mono', monospace; 
            text-decoration: none;
            justify-content: center;
            align-items: center;
            background-color: rgb(104, 104, 104);
        }
    </style>
  <div class="d-flex flex-column container side-bar" style="padding:0px; align-items: center;">
    <div class="mt-3 friend-icons" style="justify-content: center; align-items: center; border-width: 3px; border-color:black;">           
        <a>
            <img src="skiing.png" 
                class="img-thumbnail"
                height="70px"
                width="70px"
                alt="Scuuber" />
        </a>
        
    </div>
    <div class="d-flex friend-box" style="border-width: 10px; border-color: black; font-weight: bold; background-color: #1784b7;" data-bs-toggle="tooltip" data-bs-placement="right" title="<%= friend_list[0]['username'] %>">  
        Friend List      
    </div>
    <% if (friend_list.length > 0) { %>
        <% for (var i = 0; i < friend_list.length; i++) { %>
            <div class="d-flex friend-box" style="">  
                <%= friend_list[i]['friend_username'] %>        
            </div>
        <% } %>
    <% } %>
  </div>  
  <div class="d-flex flex-row container main-friends" style="padding-top: 10px;">
    <div class="d-flex flex-column" style="width: 100%; align-items: center;">
        <h1 class="scuuber-title">Manage Friends</h1>

        <form action="\addFriendRequest" method="POST">

            <div class="row">
                <div class="form-group col-md">
                    <label class="scuuber-text" for="friend_username">Username:</label>
                    <input class="form-control" type="text" id="friend_username" name="friend_username" />
                </div>
                <div class="col mt-4" >
                    <input type="submit" value="Add friend" class="btn btn-outline-info scuuber-btn" style="border-radius: 30px;" />

                </div>
            </div>
    
        </form>
    </div>
    <div class="d-flex flex-column" style="width: 100%; justify-content: center; align-items: center;">
        <p class="scuuber-title">Your friend requests</p>
        <% if (friend_request_list.length == 0) { %>
            <p class="scuuber-text">You have no friend requests</p>
        <% } %>
        <% if (friend_request_list.length > 0) { %>
            <p class="scuuber-text"> You have <%= friend_request_list.length %> friend requests</p>
            <% for (var i = 0; i < friend_request_list.length; i++)%>
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="form-group w-50">
                            <p class="scuuber-text"><%= friend_request_list[0]['username'] %></p>

                        </div>
                        <div class="col-sm">
                            <form action="acceptFriend" method="GET">
                                <input type="hidden" name="username" value="<%= friend_request_list[0].username %>" /> 
                                <input type="submit"class="btn btn-outline-info scuuber-btn" style="border-radius: 30px;"  value="Accept friend" />
                                <div></div>
                            </form>
                        </div>
                        <div class="col-sm">
                            <form action="declineFriend" method="GET">
                                <input type="hidden" name="username" value="<%= friend_request_list[0].username %>" /> 
                                <input type="submit" class="btn btn-outline-info scuuber-btn" style="border-radius: 30px;" value="Decline friend" />
                                <div></div>
                            </form>
                        </div>
                    </div>
                   
                </li>
            </ul>
        <% } %>
    </div>
        
    </div>
