<%- include ('../partials/header') %>
<%- include ('../partials/menu', {username: user}) %>

<main class="d-flex flex-row">
    <style>
        .scuuber-menu {
            color: black; font-size: 19px;font-family: 'IBM Plex Mono', monospace;text-decoration: underline;
        }
        .scuuber-title {
            color: black; 
            font-family: 'IBM Plex Mono', monospace; 
            font-weight: semibold;
        }
        .scuuber-text {
            color: black; font-size: 15px;font-family: 'IBM Plex Mono', monospace; text-decoration: none;
        }
        .scuuber-btn {
            color: black; 
            font-size: 15px;
            font-family: 'IBM Plex Mono', monospace;

        }
        .side-bar {
            flex: 0.25;
            height:100vh;
            background-color: #adadad;
            padding:0px;
            align-items: center;
            box-shadow: 5 0 20px rgba(0, 0, 0, 10);
        }
        .main-friends {
            flex: 11;
            justify-content: center;
            background-color: #efefef;
        }
        .friend-icons {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            border-radius: 10px;
            background-color: #adadad;
            padding-bottom: 10px;
        }
        .friend-icons:hover {
            border-radius: 30px;
        }
        .friend-box {
            margin-top: 10px; 
            width:80%; 
            justify-content: center; 
            align-items: center; 
            border-radius: 7px;
            align-items: center;
            color: black; 
            font-size: 15px;
            font-family: 'IBM Plex Mono', monospace; 
            text-decoration: none;
            justify-content: center;
            align-items: center;
            background-color: rgb(104, 104, 104);
        }
        .add-friends-outer {
            border-style: solid;
            width: 100%; 
            align-items: center; 
            border-color: black; 
            border-width: 1px;
        }
        .add-friends-input {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            background-color: white;
            justify-content: center;
            align-items: center;
            width: 90%;
            border-radius: 10px;
        }
        .add-friends-input:focus {

        }
    </style>
  <div class="d-flex flex-column container side-bar" style="padding:0px; align-items: center;">
    <div class="mt-3 friend-icons" style="justify-content: center; align-items: center;">           
        <a>
            <img src="skiing.png" 
                class="img-thumbnail"
                height="70px"
                width="70px"
                alt="Scuuber" />
        </a>
        
    </div>
    <div class="d-flex friend-box" style="font-weight: bold; background-color: #1784b7;"> 
        Friend List      
    </div>
    <% if (friend_list.length > 0) { %>
        <% for (var i = 0; i < friend_list.length; i++) { %>
            <div class="d-flex friend-box" style="">  
                <%= friend_list[i]['friend_username'] %>        
            </div>
        <% } %>
    <% } %>
  </div>  
  <div class="d-flex flex-row container main-friends" style="padding-top: 30px;">
    <div class="d-flex flex-column add-friends-outer" style="">
        <h1 class="scuuber-title">Add Friends</h1>

        <form action="\addFriendRequest" method="POST" name="FriendSendRequest">
            <label class="scuuber-text" for="friend_username">Add a friend by entering their username</label>
            <div class="d-flex row add-friends-input">
                <div class="form-group col-md my-1" style="width:100%;">
                    <input class="form-control" type="text" id="friend_username" name="friend_username" required minlength="1" style="border-color: rgb(25, 165, 204); border-width: 1px;" />
                </div>
                <div class="col my-1" >
                    <input id="submitbutton" type="submit" value="Invite friend" class="btn btn-outline-info scuuber-btn" style="border-radius: 5px;" />
                </div>
            </div>
    
        </form>
    </div>
    <div class="d-flex flex-column" style="width: 100%; align-items: center;">
        <p class="scuuber-title">Your friend requests</p>
        <% if (friend_request_list.length == 0) { %>
            <p class="scuuber-text">You have no friend requests</p>
        <% } %>
        <% if (friend_request_list.length > 0) { %>
            <p class="scuuber-text"> You have <%= friend_request_list.length %> friend requests</p>
            <% for (var i = 0; i < friend_request_list.length; i++) {%>
                <div class="d-flex flex-row list-group">
                    <div>
                        <%= friend_request_list[0]['username'] %>
                    </div>
                    <div>
                        <form action="acceptFriend" method="GET">
                            <input type="hidden" name="username" value="<%= friend_request_list[0].username %>" /> 
                            <input type="submit"class="btn btn-outline-info scuuber-btn" style="border-radius: 30px;"  value="Accept" />
                            <div></div>
                        </form>
                    </div>
                        <form action="declineFriend" method="GET">
                            <input type="hidden" name="username" value="<%= friend_request_list[0].username %>" /> 
                            <input type="submit" class="btn btn-outline-info scuuber-btn" style="border-radius: 30px;" value="Decline" />
                            <div></div>
                        </form>
                    <div>

                </div>
            <% } %>
        <% } %>
    </div>
        
    </div>
  </div>

  <script>
    // Little JS script to prevent the user from trying add a friend with a blank username
    let input = document.getElementById("friend_username");
    let output = document.getElementById("submitbutton");

    output.disabled = true;
    input.addEventListener("change", stateHandle);

    function stateHandle() {
        if(document.getElementById("friend_username").value === ""){
            output.disabled = true;
        } else {
            output.disabled = false;
        }
    }
</script>

</main>

<%- include ('../partials/footer') %>
