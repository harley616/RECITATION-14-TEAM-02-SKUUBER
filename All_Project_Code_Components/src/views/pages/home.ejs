<%- include ('../partials/header') %>
<%- include ('../partials/menu', {username: user}) %>



<main class="d-flex flex-row">
    <style>
        .scuuber-menu {
            color: black; font-size: 19px;font-family: 'IBM Plex Mono', monospace;text-decoration: underline;
        }
        .scuuber-title {
            color: black; 
            font-family: 'IBM Plex Mono', monospace; 
            font-weight: semibold;
        }
        .scuuber-text {
            color: black; font-size: 15px;font-family: 'IBM Plex Mono', monospace; text-decoration: none;
        }
        .scuuber-btn {
            color: black; 
            font-size: 15px;
            font-family: 'IBM Plex Mono', monospace;
            border-width:0px;
            background-color:#117c9a;

        }
        .side-bar {
            flex: 3;
            height:100vh;
            background-color: #adadad;
            padding:0px;
            align-items: center;
            box-shadow: 0 0 30px rgba(173, 173, 173, 5);
            border-style: solid;
            border-width: 0px;
            position: relative;
            z-index: 10;
        }
        .main-friends {
            flex: 11;
            justify-content: center;
            background-color: #efefef;
        }
        .friend-icons {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            border-radius: 10px;
            background-color: rgb(173, 173, 173);
            padding-bottom: 10px;
        }
        .friend-icons:hover {
            border-radius: 30px;
        }
        .friend-box {
            margin-top: 10px; 
            width:80%; 
            justify-content: center; 
            align-items: center; 
            border-radius: 7px;
            align-items: center;
            color: rgb(255, 255, 255); 
            font-size: 15px;
            font-family: 'IBM Plex Mono', monospace; 
            text-decoration: none;
            justify-content: center;
            align-items: center;
            background-color: #0064bc;
        }
        .add-friends-outer {
            border-style: none;
            width: 100%; 
            align-items: center; 
            border-color: black; 
            border-width: 1px;
            margin: 0px;
            background-color: #bebfc5;
            border-radius: 10px;
            height: 82%;
        }
        .add-friends-input {
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            background-color: rgb(139, 142, 152);
            justify-content: center;
            align-items: center;
            width: 100%;
            border-radius: 10px;
            flex: 1;
            border-style: none;
            border-color: red;
            padding: 0px;
            margin-top: 10px;
        }
        .friend-search {
            background-color: white;
            -webkit-transition: all 0.30s ease-in-out;
            -moz-transition: all 0.30s ease-in-out;
            -ms-transition: all 0.30s ease-in-out;
            -o-transition: all 0.30s ease-in-out;
            outline: none;
            /*padding: 3px 0px 3px 3px;*/
            /*margin: 5px 1px 3px 0px;*/
            border-color: rgb(25, 165, 204); 
            border-style: none;
            border-width: 1px;
            border-radius: 6px;
            font-family: 'IBM Plex Mono', monospace;
            /*font-size: 20px;*/
            height: 35px;
            width: 100%;
        }
        .form {
            margin: 0px;
        }
        .friend-request {
            border-style: solid; 
            /*border-color: black; */
            border-width:0px;
            background-color: #3babca;
            width: 90%; 
            margin-top:15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(81, 203, 238, 5); 
        }
        .friend-accept { 
            background-image: 'skiing-2.png';
        }
        .headingitem{
                background-color: #001e39;
                /* background-image: url("https://static.vecteezy.com/system/resources/thumbnails/002/099/716/small_2x/mountain-beautiful-landscape-background-design-illustration-free-vector.jpg"); */
                padding: 10px;
                font-size: 16px;font-family: 'IBM Plex Mono';
                }
    </style>

